{
  "name": "dtekbot",
  "version": "1.0.0",
  "main": "api/bot.js",
  "type": "module",
  "scripts": {
    "deploy": "vercel --prod",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "format": "npm run lint:fix && npm run prettier",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "telegraf": "^4.16.3"
  },
  "engines": {
    "node": "24"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "prettier-config": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
